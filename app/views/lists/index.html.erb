<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.6)), url(https://images.hdqwalls.com/wallpapers/final-fantasy-xv-artwork-h5.jpg);">
  <div class="container">
    <h1>Tired of looking for movies with the same atmosphere?</h1>
    <h2><span data-controller="typed-js"></span></h2>
    <h3 class="mt-2" style="display: inline;"> There are currently <span class="badge badge-light"><%=  @lists.count %></span> lists</h3>
    <%= link_to "Add a list", new_list_path, class: "btn btn-outline-light btn-lg rounded-pill", style: "margin-left: 20px" %>
  </div>
</div>
<div class = "main-container-index">
  <div class = "cards-index" style="align-items: center; justify-content: space-between">
    <% @lists.each do |list| %>
      <% if list.photo.attached? %>
        <%#= link_to "ðŸ—‘", list_path(list), method: :delete %>
        <a href="<%= list_path(list) %>" style="display: block; text-decoration: none">
          <div class="card-index" style="background-image: url('<%= cl_image_path list.photo.key %>')">
            <%= list.name %>
            <%#= link_to list.name, list_path(list) %>
          </div>
        </a>
        <%#= link_to "ðŸ—‘", list_path(list), method: :delete %>
      <% else %>
        <a href="<%= list_path(list) %>" style="display: block; text-decoration: none">
          <div class="card-index" style="background-image: url('https://images.hdqwalls.com/wallpapers/final-fantasy-xv-artwork-h5.jpg')">
            <%= list.name %>
          </div>
        </a>
      <% end %>
    <% end %>
  </div>
</div>
