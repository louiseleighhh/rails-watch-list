  <div>
    <%# <span><%= link_to "Add Flat", new_flat_path, class: "btn btn-outline-primary", type: "button" %>
    <ul class="d-flex justify-content-between", style="list-style-type: none;">
      <li><h4><%= link_to "Create a Bookmark", new_list_bookmark_path(@list), class: "btn btn-outline-primary", type: "button" %></h4></li>
      <li><h4><%= link_to "Back to list", lists_path, class: "btn btn-outline-primary", type: "button"%></h4></li>
